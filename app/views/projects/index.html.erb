<h1>hello world</h1>


<div class="container">
  <div class="row">
    <div class="col-2">
        <%= form_with model: @sector, url: projectfilter_path do |f|  %>
        <%= f.collection_check_boxes :sector_ids, @sectors,:id,:name  %>
        <h5>Filter Project</h5>
            <h6>Sector</h6>

        <% @sectors.each do |sector| %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="sectors" value=<%= sector.name %>>
              <label class="form-check-label" for="defaultCheck1">
                <%= sector.name %>
              </label>
            </div>
        <%end%>

        <br>
        <h6>Country</h6>
        <% @areas.each do |geolocation| %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="area" value=<%= geolocation.name %> id=>
              <label class="form-check-label" for="defaultCheck1">
                <%= geolocation.name %>
              </label>
            </div>
        <%end%>
        <br>
        <button type="submit" class="btn btn-primary">Filter</button>

        <% end %>
    </div>

    <div class="col-8">
      <% @project.each do |project| %>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src=<%= project.image %> alt="Card image cap">
          <div class="card-body">
            <div class="progress">
              <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <h5 class="card-title"><%= project.name %></h5>
            <p class="card-text"><%= project.company_name %></p>
            <p class="card-text"><%= project.objective %></p>
            <a href=`/project/<%= project.id %>` class="btn btn-primary">Find out</a>
            <a href=`#` class="btn btn-primary">Donate Now</a>
          </div>
        </div>
    <% end %>
    </div>

    <div class="col-2">

    </div>
  </div>
</div>


